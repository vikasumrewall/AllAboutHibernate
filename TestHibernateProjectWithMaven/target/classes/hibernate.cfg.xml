<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/allHibernateTest</property>
		<property name="connection.username">root</property>
		<property name="connection.password">root</property>
		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="cache.use_second_level_cache">true</property>
		<property name="cache.region.factory_class">
			org.hibernate.cache.ehcache.internal.EhcacheRegionFactory</property>
		<mapping class="com.hibernate.tut.Student" />
		<mapping class="com.hibernate.tut.Address" />
		<mapping class="com.hibernate.unidirectional.onetomanyandmanytoone.Question" />
		<mapping class="com.hibernate.unidirectional.onetomanyandmanytoone.Answer" />
		<mapping class="com.hibernate.manytomany.Emp" />
		<mapping class="com.hibernate.manytomany.Project" />
		
		<mapping class="com.hibernate.bidirectional.onetomanyandmanytoone.QuestionBidirectional" />
		<mapping class="com.hibernate.bidirectional.onetomanyandmanytoone.AnswerBidirectional" />
		
		
		
		<mapping class="com.hibernate.bidirectional.onetoone.Citizen" />
		<mapping class="com.hibernate.bidirectional.onetoone.Aadhar" />
		
		
		<mapping class="com.hibernate.unidirectional.onetoone.Employee" />
		<mapping class="com.hibernate.unidirectional.onetoone.PermanentAddress" />
		
		
		 

	</session-factory>
</hibernate-configuration>
